<h1> Rent All'Em Items</h1>

<h2>Available Items to Rent Out Bruh:</h2>

{{#each items}}
{{#if available}}
    <div class="card avail" style="width: 18rem;">
    <img class="card-img-top" src={{image}} alt={{name}}>
    <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{desciption}}</p>
        <button data-id={{id}} class="rent-btn">RENT for {{price}}</button>
    </div>
    </div>
{{/if}}
{{/each}}

<h2>U SOL man, these are unavailable:</h2>

{{#each items}}
{{#unless available}}
  <div class="card unavail" style="width: 18rem;">
    <img class="card-img-top" src={{image}} alt={{name}}>
    <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{desciption}}</p>
        <button data-id={{id}} class="rent-btn disabled" disabled="true"><s>RENT for {{price}}</s></button>
    </div>
    </div>
{{/unless}}
{{/each}}

