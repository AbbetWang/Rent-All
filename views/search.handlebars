<h1>Rent Everything</h1>

<h2>Available Items for Rent:</h2>

{{#each items}} {{#if available}} {{> Query/query-block}} {{/if}} {{/each}}

<h2>Unavailable (Currently Rented Out by Others):</h2>

{{#each items}} {{#unless available}} {{> Query/query-block}} {{/unless}} {{/each}}

<div class="modal" id="rentModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Rent Out this Item</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputStart">Start Date</label>
              <input type="date" class="form-control" id="transaction_Start" name="inputStart" placeholder="Start Date">
            </div>
            <div class="form-group col-md-6">
              <label for="inputEnd">End Date</label>
              <input type="date" class="form-control" id="transaction_End" name="inputEnd" placeholder="End Date">
            </div>
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button id="submitRent" data-id="{{id}}" type="button" class="btn btn-primary">Rent</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



